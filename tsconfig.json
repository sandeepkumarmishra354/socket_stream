{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "declaration": true,
    "strict": true,
    "strictFunctionTypes": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "lib": [
    "es2019"
  ],
  "include": [
    "src/**/*"
  ]
}